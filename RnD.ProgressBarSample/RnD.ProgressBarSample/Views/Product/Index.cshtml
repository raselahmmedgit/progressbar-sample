@{
    ViewBag.Title = "Index";
}
<div id="product-list">
    <h2>
        Product DataTables Sample</h2>
    <p>
        @Html.ActionLink("Create Product", "Create", "Product", new { @class = "lnkAddProduct button" })
    </p>
    <div id="products-data-table">
        <table id="productDataTable" class="dataTable">
            <thead>
                <tr>
                    <th>
                        Options
                    </th>
                    <th>
                        Product Name
                    </th>
                    <th>
                        Price
                    </th>
                    <th>
                        Category Id
                    </th>
                    <th>
                        Category Name
                    </th>
                </tr>
            </thead>
            <tbody>
            </tbody>
        </table>
    </div>
    <div id="addProductDialog" title="Add Product">
    </div>
    <div id="editProductDialog" title="Edit Product">
    </div>
    <div id="deleteProductDialog" title="Delete Product">
    </div>
    <div id="detailsProductDialog" title="Details Product">
    </div>
</div>
<script src="@Url.Content("~/Scripts/App/product-jq.js")" type="text/javascript"></script>
